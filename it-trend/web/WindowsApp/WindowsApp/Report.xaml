<Window x:Class="WindowsApp.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms" 
        xmlns:local="clr-namespace:WindowsApp"
        mc:Ignorable="d"
        Title="Report" Height="800" Width="1020" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Center" Width="1000">
        <Label x:Name="label" Content="Отчет о проведении " HorizontalAlignment="Left" Margin="2,18,0,0" VerticalAlignment="Top" FontSize="14.667"/>
        <DataGrid x:Name="dataGrid1" Margin="0,53,0,10" AutoGenerateColumns="False" HorizontalGridLinesBrush="#FFE6E6E6" VerticalGridLinesBrush="White" AutoGeneratedColumns="dataGrid1_AutoGeneratedColumns" BorderBrush="#FFB6B6B6" Background="White" CanUserResizeColumns="False" CanUserReorderColumns="False" GridLinesVisibility="Horizontal" IsReadOnly="True" HeadersVisibility="Column" Width="1000" HorizontalAlignment="Center" FontSize="13.333" RowHeight="40" ColumnHeaderHeight="45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Личный номер" Width="80" Binding="{Binding Ln}"/>
                <DataGridTextColumn Header="Фамилия Имя Отчество" Width="240" Binding="{Binding Fio}"/>                
                <DataGridTextColumn Header="Код должности" Width="90" Binding="{Binding Kd}"/>                
                <DataGridTextColumn Header="Специальность" Width="180" Binding="{Binding Sp}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Электробезопасность" Width="180" Binding="{Binding Ap}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Техника безопасности" Width="180" Binding="{Binding Es}">
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            
            <DataGrid.Resources>
                <SolidColorBrush 
        			x:Key="{x:Static SystemColors.HighlightBrushKey}"
        			Color="#FFCBCBCB" />                
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="4"/>
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Foreground" Value="#FF363636"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="{Binding}"></TextBlock>                                
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Button x:Name="PrintButton" Content="Распечатать таблицу" VerticalAlignment="Top" BorderBrush="#FF5884B8" FontSize="16" Cursor="Hand" Height="30" HorizontalAlignment="Right" Width="190" Margin="0,18,1,0" FontFamily="Segoe UI Light" Click="PrintButton_Click" >
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="BorderBrush" Value="#FF50AA75"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"  BorderBrush="#FF50AA75" CornerRadius="3,3,3,3" BorderThickness="1,1,1,1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF50AA75"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="OverAttestation" Content="Завершить аттестацию" VerticalAlignment="Top" BorderBrush="#FFBD3C3C" FontSize="16" Cursor="Hand" Height="30" HorizontalAlignment="Right" Width="190" Margin="0,18,199,0" FontFamily="Segoe UI Light" Click="OverAttestation_Click" >
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="BorderBrush" Value="#FFBD3C3C"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"  BorderBrush="#FFBD3C3C" CornerRadius="3,3,3,3" BorderThickness="1,1,1,1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFBD3C3C"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
